#!/usr/bin/env ruby

require "yaml"
require "mechanize"

config = YAML.load_file(File.expand_path("~/.airbears"))
username = config["username"]
password = config["password"]

request = Mechanize.new
request.get("https://wlan.berkeley.edu/cgi-bin/login/cookie.cgi") do |page|
  page.form_with(:method => "POST") do |f|
    f["username"] = username
    f["password"] = password
    f.submit
  end
end

puts "Logged in."
